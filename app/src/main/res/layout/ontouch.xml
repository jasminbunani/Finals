<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:layout_weight="0.38"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/xy1_txt"
        android:layout_alignRight="@+id/xy1_txt"/>

    <TextView
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="X1, Y1"
        android:id="@+id/textView4"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="90dp" />

    <TextView
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="X2, Y2"
        android:id="@+id/textView2"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Diff X,Y"
        android:id="@+id/textView3"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Motion"
        android:id="@+id/textView5"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Quadrant"
        android:id="@+id/textView6"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/motion_txt"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/editText3"
        android:elegantTextHeight="false"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_above="@+id/textView2" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:singleLine="true"
        android:id="@+id/xy1_txt"
        android:elegantTextHeight="false"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:singleLine="true"
        android:id="@+id/xy2_txt"
        android:elegantTextHeight="false"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/editText3"
        android:layout_toEndOf="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:singleLine="true"
        android:id="@+id/diffxy_txt"
        android:elegantTextHeight="false"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/xy2_txt"
        android:layout_toEndOf="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:singleLine="true"
        android:id="@+id/motion_txt"
        android:elegantTextHeight="false"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/diffxy_txt"
        android:layout_alignStart="@+id/diffxy_txt"
        android:layout_alignLeft="@+id/diffxy_txt"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:singleLine="true"
        android:id="@+id/quad_txt"
        android:elegantTextHeight="false"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/motion_txt"
        android:layout_alignLeft="@+id/motion_txt" />

</RelativeLayout>
